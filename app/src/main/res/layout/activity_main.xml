<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#191417"
    >

    <EditText

        android:layout_marginVertical="90dp"
        android:id="@+id/Firstvalue"
        android:hint="first_value(larger value)"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="45dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg"
        android:hint="second_value"
        app:layout_constraintTop_toBottomOf="@id/Firstvalue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="104dp"
        android:id="@+id/second_value"/>

    <LinearLayout
        android:id="@+id/row1"
        android:layout_width="wrap_content"
        android:layout_height="162dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/second_value">

        <Button
            android:onClick="subtract"
            android:id="@+id/sub"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/bg2"
            android:text="-"
            android:textSize="35sp"/>

        <Button
            android:onClick="add"
            android:id="@+id/add"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginVertical="90dp"
            android:background="@drawable/bg2"
            android:text="+"
            android:textSize="30sp"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="75dp"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/row1"
        android:id="@+id/row2">
        <Button
            android:onClick="multiply"
            android:id="@+id/multiply"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/bg2"
            android:text="*"
            android:textSize="30sp"
            />
        <Button
            android:onClick="division"
            android:id="@+id/divi"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/bg2"
            android:text="/"
            android:textSize="30sp"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="75dp"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/row2"
        android:id="@+id/row3">
        <Button
            android:onClick="power"
            android:id="@+id/square"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/bg2"
            android:text="^"
            android:textSize="30sp"
            />
        <Button
            android:onClick="mod"
            android:id="@+id/sqrt"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:background="@drawable/bg2"
            android:text="MOD"
            android:textSize="30sp"

            />
     </LinearLayout>
    <TextView
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_height="50dp"
        android:background="@drawable/bg"
        app:layout_constraintTop_toBottomOf="@id/row3"
        android:text="ANSWER: "
        android:textSize="20sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
